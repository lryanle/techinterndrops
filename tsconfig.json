{
	"compilerOptions": {
		"baseUrl": "./src",
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"outDir": "dist/",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022"
	},
	"include": [
		"src/**/*.ts",
		"api/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}
